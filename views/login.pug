extends includes/layout

block content
    include includes/navbar

    div.container
        div.row.center
            div.col.s12
                div.card
                    div.card-title
                        p Connexion Espace Membre
                    div.card-content
                        form(method='POST' action='/login' enctype="x-www-form-urlencoded")
                            div.row
                                div.input-field.col.s12
                                    input#username.validate(type="text" name="username")
                                    label(for="username") Votre nom d'utilisateur :
                            div.row
                                div.input-field.col.s12
                                    input#password.validate(type="password" name="password")
                                    label(for="password") Votre mot de passe :
                            div.row
                                button.btn.waves-effect.waves-light(type="submit" name="action") Se connecter
