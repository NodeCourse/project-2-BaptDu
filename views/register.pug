extends includes/layout

block content
    include includes/navbar

    div.container
        div.row
            div.row.center
                p.title Pas encore membre ?
            form.col.s12(method='POST' action='/api/users' enctype="x-www-form-urlencoded")
                div.row
                    div.input-field.col.s12
                        input#username.validate(type="text" name="username")
                        label(for="username") Votre nom d'utilisateur :
                div.row
                    div.input-field.col.s6
                        input#firstName.validate(type="text" name="firstName")
                        label(for="firstName") Votre Pr√©nom :
                    div.input-field.col.s6
                        input#lastName.validate(type="text" name="lastName")
                        label(for="lastName") Votre Nom :
                div.row
                    div.input-field.col.s12
                        input#email.validate(type="text" name="email")
                        label(for="email") Votre Email :
                div.row
                    div.input-field.col.s12
                        input#picture.validate(type="text" name="picture")
                        label(for="picture") Url de l'image :
                div.row
                    div.input-field.col.s12
                        input#password.validate(type="password" name="password")
                        label(for="password") Votre mot de passe :
                div.row.right
                    button.btn.waves-effect.waves-light(type="submit" name="action") S'inscrire
